extends ./_base

block head
  title Signal UI

block content
  each component in components
    h2(id=component.name.replace(/ /g, '-')) #{component.name}

    if component.description
      p #{component.description}

    if component.examples
      each example in component.examples
        .card
          if example.title
            h3 #{example.title}

          if example.html
            .example !{example.html}

            if !example.noMarkup
              pre #{example.html}

  h2(id='dropdown') Dropdown
  div.drop-down.drop-down--unenhanced
    select.drop-down__select
      option(value="1") Menu Option 1
      option(value="2") Menu Option 2
      option(value="3") Menu Option 3
  script#drop-down-6.
    SignalUI.initializeComponent({ scriptId: 'drop-down-6', componentType: 'drop-down' });
